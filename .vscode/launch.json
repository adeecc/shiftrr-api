  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start Backend",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "yarn",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["server:dev"],
      "env": {
        "NODE_ENV": "dev"
      }
    },
    {
      "name": "Start Frontend",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "yarn",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["client:dev"]
    }
  ]
}
